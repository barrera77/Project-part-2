@page "/crud/{ProgramCourseId:int?}"

<PageTitle>CRUD - StarTED</PageTitle>

@if (ProgramCourseId != 0)
{
    <h3>CRUD - View/Edit Courses</h3>
}
else
{
    <h3>CRUD - Add Courses</h3>
}


<!--Validation-->
@if (!string.IsNullOrWhiteSpace(feedback))
{
    <div class="alert alert-info">
        @feedback
    </div>
}

@if (errorList.Count > 0)
{
    <div class="alert alert-danger">
        @foreach (var error in errorList)
        {
            <p class="m-0">@error</p>
        }
    </div>
}


<div class="container border">
    <div class="py-4"> 
        <fieldset >
            <legend>Course Details</legend>

            <div class="row-cols-2 d-flex">
                <div id="select-program" class="row-cols-2 d-flex">
                    <label class="col-2" for="program-name">Program:</label>
                    <select class="form-select" id="program-name" value="">
                        <option selected value="">Select a Program</option>
                        @if (Programs != null)
                        {
                            foreach (var prog in Programs)
                            {
                                <option value="@prog.ProgramId">@prog.ProgramName</option>
                            }
                        }
                        else
                        {
                            <div>
                                No  cursos
                            </div>
                        }
                    </select>
                </div>

                <div id="select-program-course" class="row-cols-2 d-flex">
                    <label for="course-name" class="col-3">Course:</label>
                    <select class="form-select" id="course-name" value="">
                        <option selected value="">Select a Course</option>
                        @if (ProgramCourses != null)
                        {
                            foreach (var pc in ProgramCourses)
                            {
                                <option value="@pc.CourseId">@pc.Course.CourseName</option>
                            }
                        }
                    </select>
                </div>
            </div>
          <div id="upper-section" class="row-cols-2 d-flex">
                @if (ProgramCourseId != 0)
                {
                    <section id="section-one" class="">

                        <div class="row-cols-2 d-flex">
                            <label for="course-id" class="form-label col-2">Course Id:</label>
                            <input class="form-control" disabled="@(ProgramCourse.Active ? true : false)" id="course-id" @bind="ProgramCourse.CourseId" />
                        </div>

                        <div class="row-cols-2 d-flex">
                            <label for="course-name" class="form-label col-2">Course:</label>
                            <input class="form-control" disabled="@(ProgramCourse.Active ? true : false)" id="course-name" @bind="ProgramCourse.Course.CourseName" />
                        </div>
                        <div class="row-cols-2 d-flex">
                            <label for="course-credits" class="col-2">Credits:</label>
                            <input class="form-control" disabled="@(ProgramCourse.Active ? true : false)" id="course-credits" @bind="ProgramCourse.Course.Credits" />
                        </div>
                        <div class="row-cols-2 d-flex">
                            <label for="total-hours" class="col-2">Total Hours:</label>
                            <input class="form-control" disabled="@(ProgramCourse.Active ? true : false)" id="total-hours" @bind="ProgramCourse.Course.TotalHours" />
                        </div>
                        <div class="row-cols-2 d-flex">
                            <label class="form-label col-2" for="course-description">Description:</label>
                            <textarea disabled="@(ProgramCourse.Active ? true : false)" class="form-control" rows="3" id="course-description" />
                        </div>
                      
                    </section>
                    <!--End section-one-->
                    <section id="section-two" class="">
                        <div class="row-cols-2 d-flex">
                            <label for="classroom-type" class="col-3">Classroom Type:</label>
                            <input class="form-control" disabled="@(ProgramCourse.Active ? true : false)" id="classroom-type" @bind="ProgramCourse.Course.ClassroomType" />
                        </div>
                        <div class="row-cols-2 d-flex">
                            <label for="term" class="col-3">Term:</label>
                            <input class="form-control" disabled="@(ProgramCourse.Active ? true : false)" id="term" @bind="ProgramCourse.Course.Term" />
                        </div>
                        <div class="row-cols-2 d-flex">
                            <label for="tuition" class="form-label col-3">Tuition:</label>
                            <input class="form-control" disabled="@(ProgramCourse.Active ? true : false)" id="tuition" @bind="ProgramCourse.Course.Tuition" />
                        </div>                        
                        <div class="row-cols-2 d-flex">
                            <div class="col-5 mx-2 my-0">
                                <label for="required" class="form-label col-7 ">Required:</label>
                                <input class="form-check-input" type="checkbox" id="required" checked="@(ProgramCourse.Required ? true : false)" />
                            </div>
                            <div class="col-5 justify-content-end d-flex my-1">
                                <label for="active" class="form-label">Active:</label>
                                <input class="form-check-input col-6" type="checkbox" id="active" checked ="@(ProgramCourse.Active ? true : false)">
                            </div>
                        </div>
                        <div class="row-cols-2 d-flex">
                            <label for="comments" class="form-label col-3">Comments:</label>
                            <textarea class="form-control" rows="3" id="comments" />
                        </div>
                    </section>
                }
                else
                {
                    <div class="row-cols-2 d-flex">
                        <div id="menu-program-courses">
                            <label class="col-2" for="program-info">Program:</label>
                            <select class="form-select" id="program-info" value="" >
                                <option selected value="0">Select a Program</option>
                                @if (Programs != null)
                                {
                                    foreach (var prog in Programs)
                                    {
                                        <option value="@prog.ProgramId">@prog.ProgramName</option>
                                    }
                                }
                                else
                                {
                                    <div>
                                        No  cursos
                                    </div>
                                }
                            </select>
                        </div>

                        <div id="select-program-course">
                            <label for="course-name" class="col-2">Course:</label>
                            <select class="form-select" id="course-name" value="" >
                                <option selected value="">Select a Course</option>
                                @if (ProgramCourses != null)
                                {
                                    foreach (var pc in ProgramCourses)
                                    {
                                        <option value="@pc.CourseId">@pc.Course.CourseName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    
                }
            </div>
          -

            <section id="section-three" class="d-flex">

                @if (ProgramCourseId != 0)
                {
                    <div id="menu-buttons" class="w-75 m-auto">                       
                        <div>
                            <button class="btn btn-primary">Save Course</button>
                        </div>
                        <div>
                            <button class="btn btn-danger" @onclick="HandleDeactivate">Deactivate Course</button>
                        </div>

                        <div>
                            <a href="/query" class="btn btn-outline-danger">Cancel</a>
                        </div>

                        <div>
                            <button class="btn btn-outline-primary">Clear</button>
                        </div>
                    </div>
                }
                else
                {
                    <div id="menu-buttons" class="w-75 m-auto d-flex">
                        <div>
                            <button class="btn btn-primary">Add Course</button>
                        </div>
                        <div>
                            <button class="btn btn-secondary">Save Course</button>
                        </div>
                        <div>
                            <button class="btn btn-danger" @onclick="HandleDeactivate">Deactivate Course</button>
                        </div>

                        <div>
                            <a href="/query" class="btn btn-outline-danger">Cancel</a>
                        </div>

                        <div>
                            <button class="btn btn-outline-primary">Clear</button>
                        </div>
                    </div>
                }
               
            </section>

        </fieldset>
    </div>

</div>